{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
        "lib": [
            // see https://www.npmjs.com/package/@tsconfig/node22
            "es2023"
        ],
        "module": "ES2022",
        "moduleResolution": "Node",
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        "rollup.config.ts",
        "jest.config.ts",
        "jest.setup.js",
        ".eslintrc.js",
        ".eslintrc.userscripts.js"
    ]
}
